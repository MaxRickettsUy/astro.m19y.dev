---
import Footer from '@components/Footer.astro';
import Header from '@components/Header.astro';
import Layout from '@layouts/Layout.astro';

const blogs = [
	{ href: "https://usesthis", label: "uses this" },
	{ href: "https://hckrnews.com", label: "hckr news" },
	{ href: "https://seekingalpha.com", label: "seeking alpha" },
	{ href: "https://plainoldrecipe.com", label: "plain old recipe" }
]

const years = [{href: "rwl/2021.html", label: 2021}, {href: "rwl/2022.html", label: 2022}, {href:"rwl/2023.html", label: 2023}];

import github from "../img/github.png"
import { Image } from 'astro:assets';

---

<Layout title="m19y">
	<body class="flex flex-col">
    <Header />
    <main class="flex flex-col flex-1 justify-between">
      <div class="flex flex-col">
        <div class="flex flex-col lg:flex-row flex-auto">
          <div class="flex flex-col flex-1">
            <div class="p-2">
              <h1 class="text-3xl">Welcome! I'm Max.👋🏼</h1>
              <p class="text-[18px]">
                I'm a software developer.
              </p>
              <p class="text-[18px]">
                This site is a mishmash of things including:
                a store of interesting works and resources I've found over the years,
                a list of personal projects and what I've learned from them and more.
              </p>
              <p class="text-[18px] mt-2">
                Besides software I enjoy music (hardcore punk, black metal, rap, jazz ...), gardening (mainly vegetables), indoor bouldering and golf among other things.
                <br/><br/>
              </p>
            </div>
            <div class="p-2">
              <span class="text-xl">Some other blogs/sites I recommend:</span>
              <div class="flex flex-row space-x-2">
                {
                  blogs.map((blog) => (
                    <a class="text-sm" target="_blank" rel="noopener noreferrer" href={blog.href}>{blog.label}.</a>
                  ))
                }
              </div>
              <a style="color: var(--link)" href="random/cool-sites">See more here</a> 😎
            </div>	
          </div>
          <div class="flex flex-col flex-1">
            <div class="p-2">
              <h1 class="text-xl">Random 📜</h1>
              <div class="pl-2 flex flex-row flex-wrap">
                <a class="m-1 text-sm" href="random/merch-collection.html">Merch Collection</a>
                <p class="flex flex-row m-1">
                  <a class="text-sm" target="_blank" href="docs/50_ui_tips.pdf">50 UI Tips</a>
                </p>
                <p class="flex flex-row m-1">
                  <a class="text-sm" href="https://maxrickettsuy.github.io/bookmarks/" target="_blank" rel="noopener noreferrer">Bookmarks</a>
                </p>
                <a class="m-1 text-sm" href="random/cool-sites.html">Cool Sites</a>
              </div>
            </div>
            <div class="pl-2">
              <h1 class="text-xl">Projects 🧰</h1>
              <div>
                <p>This is a list of my ongoing personal projects.</p>
                </p>They are open source and if you find yourself here and would like to contribute please do!</p>
              </div>
              <div class="p-2">
                <div class="flex flex-row">
                  <a class="mr-2" href="https://prsnl.site">prsnl.site</a>
                  <a target="_blank" href="https://github.com/MaxRickettsUy/prsnl.site">
                    <Image alt="Github logo" width="20" height="20" src={github}/>
                  </a>
                </div>
                <p class="post-text">A curated collection of personal websites and blogs.</p>
              </div>
            </div>
            <div class="pl-2">
              <h1 class="text-xl">Read 📚 / Watch 📺 / Listen 🎧</h1>
              <div>
                <p>
                  Yearly collections of books, articles, and albums I've checked out.
                </p>
                <div class="pl-2">
                  {
                    years.map((year) => (
                      <a class="m-1" href={year.href}>{year.label}</a>
                    ))
                  }                    
                </div>
              </div>
            </div>
          </div>  
        </div>
      </div>
      <div class="flex justify-center" style="margin-top: 20px;">
        <a href="https://gossipsweb.net">
          <img src="https://gossipsweb.net/images/twwmwh-lime.jpg" alt="This website was made with hands." style="height: 40px; width: 14rem; border: 1px dashed #fff; padding: 4px;" />
        </a>
      </div>
    </main>
    <Footer />
  </body>
</Layout>